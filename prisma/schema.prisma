generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Category {
  TK
  SD
  SMP
  SMA
  KULIAH
  PROFESSIONAL
}

enum Pricing {
  FREE
  PAID
}

model User {
  id String @id @default(cuid())
  firstName String
  lastName String
  email String @unique
  password String
  role Role

  activity Activity[]
}

model Activity {
  id String @id @default(cuid())
  title String
  slug String
  isApproved Boolean @default(false)
  category Category
  description String
  featuredImage String
  images String
  pricing Pricing
  linkUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user User @relation(fields: [userId], references: [id])
}
